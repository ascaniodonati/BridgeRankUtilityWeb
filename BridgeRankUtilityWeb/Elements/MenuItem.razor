<a href="@Link">
    <span class="me-3 text-white">
        <i class="fa-solid fa-@Icon fa-xl me-1"></i>
        <span>@Title</span>
    </span>
</a>


@code {
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string Icon { get; set; }

    [Parameter]
    public string Link { get; set; }
}
